@model ITS_System.Models.ClassSchedule

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ClassSchedule</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstructorId" class="control-label"></label>
                <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.InstructorId"></select>
                <span asp-validation-for="InstructorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxNumbersOfBooking" class="control-label"></label>
                <input asp-for="MaxNumbersOfBooking" class="form-control" />
                <span asp-validation-for="MaxNumbersOfBooking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control form-select" asp-items="Html.GetEnumSelectList<ITS_System.Models.Enums.ClassStatus>()" ></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </div>
        <div class="col">
            <div class="form-group mt-2">
                <select class="form-select" multiple asp-items="ViewBag.EqupimentList" name="EquipmentList"></select>
            </div>
        </div>
        <div class="col">
            <div class="form-group mt-2">
                <select class="form-select" multiple asp-items="ViewBag.WaitingList" name="WaitingList"></select>
            </div>
        </div>
    </form>
</div>

<div class="form-group mt-2">
    <label asp-for="InstructorId" class="control-label"></label>
    <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.InstructorId"></select>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
